{% extends '::base.html.twig' %}

{% block body %}
    
    <form id="form_user" action="#" method="post" {{ form_enctype(form) }}>
        <h1><small>Create New User</small></h1>
        
        {% if notice %}
            {% for alert in notice %}
                <div class="alert alert-success pull-left">
                    <strong>Well done!</strong> {{ alert }}
                </div>
            {% endfor %}
        {% endif %}
        
        <div class="clear"></div>
        
        <blockquote>
        
        {% if notice %}
            {% for error in notice %}
                <div class="alert  alert-error">
                    <strong>Warning!</strong> {{ error }}
                </div>            
            {% endfor %}
        {% endif %}
        
        {{ form_errors(form) }}
        
        {{ form_label(form.fullname) }}
        {% if form_errors(form.fullname) %}
            <div class="alert alert-error">{{ form_errors(form.fullname) }}</div>
        {% endif %}
        {{ form_widget(form.fullname) }}
        
        
        {{ form_label(form.username) }}
        {% if form_errors(form.username) %}
            <div class="alert alert-error">{{ form_errors(form.username) }}</div>
        {% endif %}
        {{ form_widget(form.username) }}
        
        
        {{ form_label(form.password) }}
        {% if form_errors(form.password) %}
            <div class="alert alert-error">{{ form_errors(form.password) }}</div>
        {% endif %}
        {{ form_widget(form.password) }}
        
        
        {{ form_label(form.email) }}
        {% if form_errors(form.email) %}
            <div class="alert alert-error">{{ form_errors(form.email) }}</div>
        {% endif %}
        {{ form_widget(form.email) }}
        
        
        {{ form_label(form.roles) }}
        {% if form_errors(form.roles) %}
            <div class="alert alert-error">{{ form_errors(form.roles) }}</div>
        {% endif %}
        {{ form_widget(form.roles) }}
    
        {{ form_rest(form) }}        
          
          <div class="clear"></div>
        </blockquote>
        
        <div class="form-actions">
            <a href="{{ path('bioversity_user_homepage') }}" class="btn btn-info" type="button" >Bach</a>
            <input class="btn btn-info" type="submit" value="Save" />
        </div>     
    </form>
    
{% endblock %}