{% block radio_widget %}
    {% spaceless %}
    {% set desc= constant('Bioversity\\ServerConnectionBundle\\Repository\\Tags::kTAG_DEFINITION') %}
        <tr class="error">
          <td>
            <input type="radio" {{ block('widget_attributes') }}{% if value is defined %} value="{{ label }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
          </td>
          <td title="{% if node[desc] is defined %}{{ node[desc]['en'] }}{% else %}no description for this item{% endif %}">
            <span>
              {{ label }}
            </span>
          </td>
          <td><a href="#SliderModal" class="slider_button btn btn-info btn-small pull-right" data-toggle="modal" value="{{ label }}">SHOW</a></td>
        </tr>
    {% endspaceless %}
{% endblock radio_widget %}

{% block checkbox_widget %}
{% spaceless %}
    <input
        title="{#{% if node.18 is defined %}{{ node[18]['en'] }}{% else %}no description for this item{% endif %}#}"
        type="checkbox"
        {{ block('widget_attributes') }}
        {% if value is defined %}
            value="{{ value }}"
        {% endif %}
        {% if checked %}
            checked="checked"
        {% endif %} />
{% endspaceless %}
{% endblock checkbox_widget %}

{% block choice_widget_expanded %}
{% spaceless %}
    <div {{ block('widget_container_attributes') }}>
    {% for child in form %}
        <div class="checkbox_option">
        {{ form_widget(child) }}
        {{ form_label(child) }}
        </div>
    {% endfor %}
    </div>
{% endspaceless %}
{% endblock choice_widget_expanded %}

{% block _OntologyNode_node_related_widget %}
    <div class="clear"></div>
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
        
            <div id="OntologyNodeList">
                <h2><small>Or select existing nodes related to the Term</small></h2>
                <table class="table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>ID</th>
                      <th class="pull-right">Show in Slider</th>
                    </tr>
                  </thead>
                  <tbody>
                        {% for child in form %}
                            {{ form_widget(child) }}
                        {% endfor %}
                  </tbody>
                </table>
            </div>
    
        </div>
    {% endspaceless %}
    <div class="clear"></div>
{% endblock %}