<div class="btn-group pull-right">
  <a data-toggle="modal" class="btn btn-info"  href="#MenuModal">
    <i class="icon-th"></i>
  </a>
</div>

{% set currentPath = app.request.attributes.get('_route') %}
<div class="modal hide fade" id="MenuModal">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>MAIN MENU</h2>
      </div>
      <div class="modal-body">
        <div class="nav_menu_top nav-collapse collapse second_row">
          
          <ul class="nav">
            <li class="root_page {% if(currentPath == 'bioversity_site_structure_homepage') %} active{% endif %}">
              <a href="{{ path('bioversity_site_structure_homepage') }}">Home</a>
            </li>
            <li class="static_page {% if(currentPath == 'bioversity_site_structure_about') %} active{% endif %}">
              <a href="{{ path('bioversity_site_structure_about') }}">About</a>
            </li>
            <li class="static_page {% if(currentPath == 'bioversity_site_structure_contact') %} active{% endif %}">
              <a href="{{ path('bioversity_site_structure_contact') }}">Contact</a>
            </li>
            <li class="trait_page {% if(currentPath == 'bioversity_site_structure_browse_trait') %} active{% endif %}">
              <a href="{{ path('bioversity_site_structure_browse_trait') }}">Trait</a>
            </li>
            <li class="research_page {% if(currentPath == 'bioversity_slider_browse_slider') %} active{% endif %}">
              <a href="{{ path('bioversity_slider_browse_slider') }}">Slider</a>
            </li>
          </ul>
          
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <ul class="nav">
              {% if is_granted('ROLE_ADMIN') %}
                <li>
                  <a href="{{ path('bioversity_user_homepage') }}">Manage User</a>
                </li>
              {% endif %}
              {% if is_granted('ROLE_ONTOLOGY') %}
                <li>
                  <a href="{{ path('bioversity_ontology_browse_slider') }}">Manage Node</a>
                </li>
              {% endif %}
              <li><a href="#">Profile</a></li>
              <li><a href="{{ path('b_s_logout') }}">Sign Out</a></li>
            </ul>
          {% else %}
            <ul class="nav">
              <li><a href="{{ path('b_s_registration') }}">Registration</a></li>
            </ul>
          {% endif %}
  
